<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/about"
        android:src="@drawable/band"

        android:layout_gravity="top" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="Мы команда юных Android разработчиков! И за этот небольшой промежуток времени (на самом деле большой) мы постарались освоить для себя что то новое, а именно Android программирование. Недеемся у нас это получилось :)"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/about"
        android:id="@+id/textView" />

/

</RelativeLayout>